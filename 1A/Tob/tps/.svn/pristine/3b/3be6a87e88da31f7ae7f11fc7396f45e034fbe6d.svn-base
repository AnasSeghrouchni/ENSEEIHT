package allumettes;

public class StratExperte implements Strategie{

	public int getPrise(Jeu jeu) {
		assert(jeu!=null);
		int nball= jeu.getNombreAllumettes();
		int max=Jeu.PRISE_MAX;
		if ((nball-1) % (max+1)==0) {
			return 1; //Jouer le moins pour attendre une erreur de l'adversaire.
		}
		else {
			return (nball-1) % (max+1);
		}
	}
}
