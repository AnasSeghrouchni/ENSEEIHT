			while (jeu.getNombreAllumettes() != 2) {
				jeu.retirer(1);
			}
		} catch (CoupInvalideException e) {
			System.out.println("Cette exception n'est pas cens√©e se produire.");
		}
		System.out.println("[" + jeu.toString() + "]");
		return 1;
	}

}
