--Definition d'une structure chainée simple (Une Clé et un pointeur)
with Ada.Unchecked_Deallocation;
with Ada.Text_IO;  use Ada.Text_IO;

generic
    type T_Cle is private;

package Chaine is

    type T_Chaine is private;

    --Permet de vider un sda.
    procedure Vider (Sda : in out T_Chaine);

    --Initialise une sda.
    Procedure Initialiser(Sda: out T_Chaine) ;

    --Savoir si sda est vide.
    function Est_Vide(Sda : in T_Chaine) return Boolean ;

    --Enregistre une nouvelle clé.
    procedure Enregistrer(Sda : in out T_Chaine; Cle : in T_Cle) ;

    --Savoir si une clé est présente.
    function Est_Present(Sda : in T_Chaine;Cle: in T_Cle) return Boolean;

    --Supprime une clé de la sda.
    procedure Supprimer(Sda : in out T_Chaine; Cle : in T_Cle) ;

private

    type T_Cellule;
    type T_Chaine is access T_Cellule;
    type T_Cellule is record
        Cle:T_Cle;
        Suivante:T_Chaine;
    end record;

end Chaine;
